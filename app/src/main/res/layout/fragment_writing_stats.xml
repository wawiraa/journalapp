<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#D461A6"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvTotalJournals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Journals"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#A2D2FF"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvTotalWords"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Words"
                        android:textSize="10sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#A50062"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvPositiveCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Positive"
                        android:textSize="10sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#D62900"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvNegativeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Negative"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="10sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sentiment split"
            android:textColor="#5090CB"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/tvSampleMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample, Actual Statistics will be populated when there is enough data :)"
            android:textColor="#5090CB"
            android:textAlignment="center"
            android:padding="8dp"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="8dp">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieSentimentSummary"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>


        <LinearLayout
            android:id="@+id/pieLegend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="#A50062"
                android:layout_marginEnd="4dp" />
            <TextView
                android:text="Positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginEnd="12dp" />

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="#D62900"
                android:layout_marginEnd="4dp" />
            <TextView
                android:text="Negative"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginEnd="12dp" />

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="#A2D2FF"
                android:layout_marginEnd="4dp" />
            <TextView
                android:text="Neutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvScopeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trends over time"
            android:textColor="#5090CB"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/tvSampleMessage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample, Actual Statistics will be populated when there is enough data :)"
            android:textColor="#5090CB"
            android:textAlignment="center"
            android:padding="8dp"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="8dp">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barCategoryChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/barLegend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#D461A6"
                android:layout_marginEnd="4dp" />
            <TextView
                android:text="Skipped"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginEnd="5dp" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#A2D2FF"
                android:layout_marginEnd="4dp" />
            <TextView
                android:text="Neutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginEnd="5dp" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#A50062"
                android:layout_marginEnd="4dp" />
            <TextView
                android:text="Positive"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginEnd="5dp" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#D62900"
                android:layout_marginEnd="4dp" />
            <TextView
                android:text="Negative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
